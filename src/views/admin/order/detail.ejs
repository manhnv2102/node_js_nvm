<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Hỏi Dân IT - Dự án laptopshop" />
    <meta name="author" content="Hỏi Dân IT" />
    <title>Manage Orders</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

<body class="sb-nav-fixed">
    <%- include('../layout/header') -%>
        <div id="layoutSidenav">
            <%- include('../layout/sidenav') -%>
                <div id="layoutSidenav_content">
                    <main>
                        <div class="container-fluid px-4">
                            <h1 class="mt-4">Manage Orders</h1>
                            <ol class="breadcrumb mb-4">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item">Orders</li>
                                <li class="breadcrumb-item active">View order detail</li>
                            </ol>
                            <div>
                                <h5>Order with id = <%= id %>
                                </h5>
                                <hr>
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <th scope="col">Sản Phẩm</th>
                                        <th scope="col">Tên</th>
                                        <th scope="col">Giá cả</th>
                                        <th scope="col">Số lượng</th>
                                        <th scope="col">Thành tiền</th>
                                    </thead>
                                    <tbody>
                                        <% (orderDetails || []).forEach( function (orderDetail) { %>
                                            <tr>
                                                <th scope="row">
                                                    <div>
                                                        <img src="/images/product/<%= orderDetail.products.image %>"
                                                            class="img-fluid me-5 rounded-circle"
                                                            style="width: 80px; height: 80px;" alt="">
                                                    </div>
                                                </th>
                                                <td>
                                                    <p class="mb-0 mt-4">
                                                        <a href="/product/<%= orderDetail.products.id %>"
                                                            target="_blank">
                                                            <%= orderDetail.products.name %>
                                                        </a>
                                                    </p>
                                                </td>
                                                <td>
                                                    <p class="mb-0 mt-4">
                                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                            currency: 'VND' }).format(orderDetail.price) %>
                                                    </p>

                                                </td>
                                                <td>
                                                    <div class="input-group quantity mt-4">
                                                        <input type="text"
                                                            class="form-control form-control-sm text-center border-0 disabled"
                                                            value="<%= orderDetail.quantity %>">
                                                    </div>
                                                </td>
                                                <td>
                                                    <p class="mb-0 mt-4">
                                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' ,
                                                            currency: 'VND' }).format(orderDetail.price *
                                                            orderDetail.quantity) %>
                                                    </p>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <a href="/admin/order" class="btn btn-success mt-3">Back</a>
                        </div>
                    </main>
                    <%- include('../layout/footer') -%>
                </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
        <script src="/admin/js/scripts.js"></script>
</body>

</html>